doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/Style/style.css')
    body
        form(method='POST')
            legend Reset Password
            .form-group
                label(for='password') Nouveau Password
                input.form-control(type='password', name='password', value='', placeholder='New password', autofocus=true)
            .form-group
                label(for='confirm') Confirmation Password
                input.form-control(type='password', name='confirmPassword', value='', placeholder='Confirm password')
            .form-group
                button.btn.btn-primary(type='submit') Modifier Password